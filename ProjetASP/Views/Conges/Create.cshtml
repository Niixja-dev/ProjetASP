@model ProjetASP.Models.Conge
@{
    ViewData["Title"] = "Nouvelle demande de congé";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4>Nouvelle demande de congé</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "Conges", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
                    
                    <div class="mb-3">
                        <label class="form-label">Employé</label>
                        @Html.DropDownListFor(m => m.EmployeId, ViewBag.Employes as SelectList, "-- Sélectionner un employé --", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.EmployeId, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Type de congé</label>
                        @Html.DropDownListFor(m => m.Type, Html.GetEnumSelectList<TypeConge>(), new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Date de début</label>
                            @Html.TextBoxFor(m => m.DateDebut, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(m => m.DateDebut, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Date de fin</label>
                            @Html.TextBoxFor(m => m.DateFin, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(m => m.DateFin, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Motif</label>
                        @Html.TextAreaFor(m => m.Motif, new { @class = "form-control", rows = "3" })
                        @Html.ValidationMessageFor(m => m.Motif, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Index", "Conges")" class="btn btn-secondary">Retour</a>
                        <button type="submit" class="btn btn-primary">Soumettre</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
