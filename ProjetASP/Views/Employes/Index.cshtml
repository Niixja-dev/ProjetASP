@model IEnumerable<ProjetASP.Models.Employe>
@{
    ViewData["Title"] = "Liste des employés";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-badge me-2"></i>Liste des employés</h2>
    <a href="@Url.Action("Create", "Employes")" class="btn btn-primary"><i class="bi bi-person-plus me-2"></i>Nouvel employé</a>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Matricule</th>
                        <th>Nom complet</th>
                        <th>Email</th>
                        <th>Poste</th>
                        <th>Département</th>
                        <th>Salaire</th>
                        <th>Congés</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td><strong>@emp.Matricule</strong></td>
                            <td>@emp.NomComplet</td>
                            <td>@emp.Email</td>
                            <td>@emp.Poste</td>
                            <td>@emp.Departement</td>
                            <td>@emp.SalaireBase.ToString("N0") €</td>
                            <td><span class="badge bg-info">@emp.SoldeConges j</span></td>
                            <td>
                                @if (emp.EstActif)
                                {
                                    <span class="badge bg-success">Actif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactif</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("Details", "Employes", new { id = emp.Id })" class="btn btn-outline-info" title="Détails"><i class="bi bi-eye"></i></a>
                                    <a href="@Url.Action("Edit", "Employes", new { id = emp.Id })" class="btn btn-outline-warning" title="Modifier"><i class="bi bi-pencil"></i></a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a href="@Url.Action("Delete", "Employes", new { id = emp.Id })" class="btn btn-outline-danger" title="Supprimer"><i class="bi bi-trash"></i></a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center text-muted py-4">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-2">Aucun employé trouvé</p>
            </div>
        }
    </div>
</div>
