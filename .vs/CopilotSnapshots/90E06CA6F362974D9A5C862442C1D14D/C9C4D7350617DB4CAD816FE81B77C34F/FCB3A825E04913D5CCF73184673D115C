@section Scripts {
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // Couleurs cohérentes
        const colors = {
            primary: '#0d6efd',
            success: '#198754',
            warning: '#ffc107',
            danger: '#dc3545',
            info: '#0dcaf0',
            secondary: '#6c757d',
            purple: '#6f42c1',
            orange: '#fd7e14',
            teal: '#20c997',
            pink: '#d63384'
        };

        // 1. Graphique Masse Salariale (Line Chart)
        const ctxMasse = document.getElementById('chartMasseSalariale');
        if (ctxMasse) {
            new Chart(ctxMasse, {
                type: 'line',
                data: {
                    labels: @Html.Raw(ViewBag.MasseSalarialeLabels ?? "[]"),
                    datasets: [{
                        label: 'Masse salariale (€)',
                        data: @Html.Raw(ViewBag.MasseSalarialeData ?? "[]"),
                        borderColor: colors.primary,
                        backgroundColor: 'rgba(13, 110, 253, 0.1)',
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: colors.primary,
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString() + ' €';
                                }
                            }
                        }
                    }
                }
            });
        }

        // 2. Graphique Départements (Pie Chart)
        const ctxDept = document.getElementById('chartDepartements');
        if (ctxDept) {
            new Chart(ctxDept, {
                type: 'pie',
                data: {
                    labels: @Html.Raw(ViewBag.DepartementsLabels ?? "[]"),
                    datasets: [{
                        data: @Html.Raw(ViewBag.DepartementsData ?? "[]"),
                        backgroundColor: [
                            colors.primary,
                            colors.success,
                            colors.warning,
                            colors.danger,
                            colors.info,
                            colors.purple,
                            colors.orange,
                            colors.teal
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: { boxWidth: 12 }
                        }
                    }
                }
            });
        }

        // 3. Graphique Statut Congés (Doughnut Chart)
        const ctxConges = document.getElementById('chartCongesStatut');
        if (ctxConges) {
            new Chart(ctxConges, {
                type: 'doughnut',
                data: {
                    labels: ['Approuvés', 'Refusés', 'En attente'],
                    datasets: [{
                        data: @Html.Raw(ViewBag.CongesData ?? "[0,0,0]"),
                        backgroundColor: [
                            colors.success,
                            colors.danger,
                            colors.warning
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: { boxWidth: 12 }
                        }
                    },
                    cutout: '60%'
                }
            });
        }

        // 4. Graphique Types de Congés (Bar Chart)
        const ctxTypes = document.getElementById('chartTypesConges');
        if (ctxTypes) {
            new Chart(ctxTypes, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(ViewBag.TypesCongesLabels ?? "[]"),
                    datasets: [{
                        label: 'Nombre',
                        data: @Html.Raw(ViewBag.TypesCongesData ?? "[]"),
                        backgroundColor: [
                            colors.primary,
                            colors.success,
                            colors.warning,
                            colors.danger,
                            colors.info,
                            colors.purple
                        ],
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            });
        }

        // 5. Graphique Embauches (Bar Chart)
        const ctxEmbauches = document.getElementById('chartEmbauches');
        if (ctxEmbauches) {
            new Chart(ctxEmbauches, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(ViewBag.EmbauchesLabels ?? "[]"),
                    datasets: [{
                        label: 'Embauches',
                        data: @Html.Raw(ViewBag.EmbauchesData ?? "[]"),
                        backgroundColor: colors.teal,
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: { stepSize: 1 }
                        }
                    }
                }
            });
        }
    </script>
    
    <style>
        #chartMasseSalariale { height: 250px !important; }
        #chartDepartements { height: 250px !important; }
        #chartCongesStatut { height: 250px !important; }
        #chartTypesConges { height: 250px !important; }
        #chartEmbauches { height: 250px !important; }
    </style>
}
