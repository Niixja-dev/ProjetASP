using System.Diagnostics;
using Microsoft.AspNetCore.Mvc;
using Microsoft.EntityFrameworkCore;
using ProjetASP.Models;

namespace ProjetASP.Controllers
{
    public class HomeController : Controller
    {
        private readonly GRHContext _context;

        public HomeController(GRHContext context)
        {
            _context = context;
        }

        public IActionResult Index()
        {
            if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                // Statistiques de base
                ViewBag.TotalEmployes = _context.Employes.Count();
                ViewBag.EmployesActifs = _context.Employes.Where(e => e.EstActif).Count();
                ViewBag.EmployesInactifs = _context.Employes.Where(e => !e.EstActif).Count();
                ViewBag.CongesEnAttente = _context.Conges.Where(c => c.Statut == StatutConge.EnAttente).Count();
                ViewBag.PaiesNonPayees = _context.Paies.Where(p => !p.EstPaye).Count();
                
                var moisActuel = DateTime.Now.Month;
                var anneeActuelle = DateTime.Now.Year;
                
                // Masse salariale du mois
                var paiesDuMois = _context.Paies.Where(p => p.Mois == moisActuel && p.Annee == anneeActuelle).ToList();
                ViewBag.MasseSalariale = paiesDuMois.Sum(p => p.SalaireNet);

                // ========== DONNÉES POUR LES GRAPHIQUES ==========

                // 1. Répartition par département (Pie Chart)
                var parDepartement = _context.Employes
                    .Where(e => e.EstActif && e.Departement != null)
                    .GroupBy(e => e.Departement)
                    .Select(g => new { Departement = g.Key, Count = g.Count() })
                    .ToList();
                ViewBag.DepartementsLabels = System.Text.Json.JsonSerializer.Serialize(parDepartement.Select(d => d.Departement).ToArray());
                ViewBag.DepartementsData = System.Text.Json.JsonSerializer.Serialize(parDepartement.Select(d => d.Count).ToArray());

                // 2. Évolution masse salariale sur 6 mois (Line Chart)
                var masseSalariale6Mois = new List<decimal>();
                var labels6Mois = new List<string>();
                for (int i = 5; i >= 0; i--)
                {
                    var date = DateTime.Now.AddMonths(-i);
                    var mois = date.Month;
                    var annee = date.Year;
                    var masse = _context.Paies
                        .Where(p => p.Mois == mois && p.Annee == annee)
                        .ToList()
                        .Sum(p => p.SalaireNet);
                    masseSalariale6Mois.Add(masse);
                    labels6Mois.Add(date.ToString("MMM yyyy"));
                }
                ViewBag.MasseSalarialeLabels = System.Text.Json.JsonSerializer.Serialize(labels6Mois.ToArray());
                ViewBag.MasseSalarialeData = System.Text.Json.JsonSerializer.Serialize(masseSalariale6Mois.ToArray());

                // 3. Statut des congés (Doughnut Chart)
                var congesApprouves = _context.Conges.Count(c => c.Statut == StatutConge.Approuve);
                var congesRefuses = _context.Conges.Count(c => c.Statut == StatutConge.Refuse);
                var congesEnAttente = _context.Conges.Count(c => c.Statut == StatutConge.EnAttente);
                ViewBag.CongesData = System.Text.Json.JsonSerializer.Serialize(new[] { congesApprouves, congesRefuses, congesEnAttente });

                // 4. Types de congés (Bar Chart)
                var parTypeConge = _context.Conges
                    .GroupBy(c => c.Type)
                    .Select(g => new { Type = g.Key.ToString(), Count = g.Count() })
                    .ToList();
                ViewBag.TypesCongesLabels = System.Text.Json.JsonSerializer.Serialize(parTypeConge.Select(t => t.Type).ToArray());
                ViewBag.TypesCongesData = System.Text.Json.JsonSerializer.Serialize(parTypeConge.Select(t => t.Count).ToArray());

                // 5. Embauches par mois (Bar Chart - 12 derniers mois)
                var embauches12Mois = new List<int>();
                var labelsEmbauches = new List<string>();
                for (int i = 11; i >= 0; i--)
                {
                    var date = DateTime.Now.AddMonths(-i);
                    var count = _context.Employes.Count(e => 
                        e.DateEmbauche.Month == date.Month && 
                        e.DateEmbauche.Year == date.Year);
                    embauches12Mois.Add(count);
                    labelsEmbauches.Add(date.ToString("MMM"));
                }
                ViewBag.EmbauchesLabels = System.Text.Json.JsonSerializer.Serialize(labelsEmbauches.ToArray());
                ViewBag.EmbauchesData = System.Text.Json.JsonSerializer.Serialize(embauches12Mois.ToArray());
            }
            return View();
        }

        public IActionResult Privacy()
        {
            return View();
        }

        [ResponseCache(Duration = 0, Location = ResponseCacheLocation.None, NoStore = true)]
        public IActionResult Error()
        {
            return View(new ErrorViewModel { RequestId = Activity.Current?.Id ?? HttpContext.TraceIdentifier });
        }
    }
}
