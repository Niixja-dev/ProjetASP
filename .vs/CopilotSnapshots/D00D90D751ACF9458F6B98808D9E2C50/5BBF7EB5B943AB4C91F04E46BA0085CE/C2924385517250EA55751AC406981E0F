@model IEnumerable<ProjetASP.Models.Conge>
@{
    ViewData["Title"] = "Gestion des congés";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-calendar-check me-2"></i>Gestion des congés</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-calendar-plus me-2"></i>Nouvelle demande</a>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <select name="statut" class="form-select">
                    <option value="">Tous les statuts</option>
                    <option value="0" selected="@(ViewBag.StatutActuel?.ToString() == "0")">En attente</option>
                    <option value="1" selected="@(ViewBag.StatutActuel?.ToString() == "1")">Approuvé</option>
                    <option value="2" selected="@(ViewBag.StatutActuel?.ToString() == "2")">Refusé</option>
                </select>
            </div>
            <div class="col-md-3">
                <select name="employeId" class="form-select" asp-items="@ViewBag.Employes">
                    <option value="">Tous les employés</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100"><i class="bi bi-search me-2"></i>Filtrer</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Employé</th>
                        <th>Type</th>
                        <th>Période</th>
                        <th>Jours</th>
                        <th>Demande</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var conge in Model)
                    {
                        <tr>
                            <td>@conge.Employe?.NomComplet</td>
                            <td>@conge.Type</td>
                            <td>@conge.DateDebut.ToString("dd/MM/yyyy") - @conge.DateFin.ToString("dd/MM/yyyy")</td>
                            <td><span class="badge bg-secondary">@conge.NombreJours j</span></td>
                            <td>@conge.DateDemande.ToString("dd/MM/yyyy")</td>
                            <td>
                                @switch (conge.Statut)
                                {
                                    case ProjetASP.Models.StatutConge.EnAttente:
                                        <span class="badge bg-warning text-dark">En attente</span>
                                        break;
                                    case ProjetASP.Models.StatutConge.Approuve:
                                        <span class="badge bg-success">Approuvé</span>
                                        break;
                                    case ProjetASP.Models.StatutConge.Refuse:
                                        <span class="badge bg-danger">Refusé</span>
                                        break;
                                    case ProjetASP.Models.StatutConge.Annule:
                                        <span class="badge bg-secondary">Annulé</span>
                                        break;
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@conge.Id" class="btn btn-outline-info" title="Détails"><i class="bi bi-eye"></i></a>
                                    @if (conge.Statut == ProjetASP.Models.StatutConge.EnAttente)
                                    {
                                        <a asp-action="Approve" asp-route-id="@conge.Id" class="btn btn-outline-success" title="Approuver"><i class="bi bi-check-lg"></i></a>
                                        <form asp-action="Refuse" asp-route-id="@conge.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Refuser"><i class="bi bi-x-lg"></i></button>
                                        </form>
                                    }
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Delete" asp-route-id="@conge.Id" class="btn btn-outline-danger" title="Supprimer"><i class="bi bi-trash"></i></a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center text-muted py-4">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-2">Aucune demande de congé trouvée</p>
            </div>
        }
    </div>
</div>
